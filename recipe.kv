#:kivy 1.9.1
# -*- coding: utf-8 -*-
<TestScroll, FilterScroll>:
  size_hint: (1, 1)
  do_scroll_x: False

<ScrollButton>:
  size_hint_y: None
  height: 30
  on_press: self.button_callback()

<CheckButton>:
  size_hint_y: None
  height: 30

<IngredientScreen>:
  name: 'Ingredients'
  ings_list: ingsb_list
  BoxLayout:
    id: ingsb_list
    orientation: "horizontal"
    padding: (10,40,10,10)
    spacing: 10

<MainScreen>:
  ing_screen: ing_screen
  rep_screen: rep_screen
  name: "ScreenManager"
  fullscreen: True
  BoxLayout:
    orientation: 'vertical'
    Spinner:
      id: spinner
      text: "Ingredients"
      values: ("Ingredients", "Recipe", "Shopping")
      size_hint: (None, None)
      size: (100, 44)
      on_text: sm.current = self.text
    ScreenManager:
      id: sm
      IngredientScreen:
        id: ing_screen
      RecipeScreen:
        id: rep_screen
      Screen:
        name: "Shopping"

<RadioButtonSelector>:
  size_hint_y: None

<RecipeScreen>:
  name: 'Recipe'
  ings_list: ings_list
  filter_type: filter_type
  filter_ease: filter_ease
  Accordion:
    orientation: 'horizontal'
    AccordionItem:
      title: "Filter"
      BoxLayout:
        orientation: "vertical"
        GridLayout:
          size_hint_y: None
          height: 100
          cols: 2
          padding: 30
          spacing: 10
          Label:
            text: "Ease"
            size: (100, 44)
            size_hint: None, None
          Spinner:
            id: filter_ease
            text: "All"
            values: ("All", "Easy", "Medium", "Hard")
            size: (100, 44)
            size_hint: None, None
          Label:
            text: "Type"
            size: (100, 44)
            size_hint: None, None
          Spinner:
            id: filter_type
            text: "All"
            values: ("All", "主菜", "副菜", "デザート")
            size: (100, 44)
            size_hint: None, None
        BoxLayout:
          size_hint_y: .5
          id: ings_list
          orientation: "horizontal"
          padding: (10,40,10,10)
          spacing: 10
    AccordionItem:
      title: "Testing"
