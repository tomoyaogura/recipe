#:kivy 1.9.1
# -*- coding: utf-8 -*-
<TestScroll>:
  #grid: grid
  size_hint: (1, 1)
  do_scroll_x: False
  GridLayout:
    id: grid
    size_hint_y: None
    cols: 1
    padding: 10
    spacing: 10
    height: self.minimum_height
    Button:
      on_press:root.update()

<ScrollButton>:
  size_hint_y: None
  height: 30
  on_press: self.button_callback()


<IngredientScreen>:
  ings_list: ingsb_list
  name: 'Ingredients'
  BoxLayout:
    id: ingsb_list
    orientation: "horizontal"
    padding: (10,40,10,10)
    spacing: 10

<MainScreen>:
  name: "ScreenManager"
  fullscreen: True
  BoxLayout:
    orientation: 'vertical'
    Spinner:
      id: spinner
      text: "Ingredients"
      values: ("Ingredients", "Recipe", "Shopping")
      size_hint: (None, None)
      size: (100, 44)
      on_text: sm.current = self.text
    ScreenManager:
      id: sm
      IngredientScreen:
      RecipeScreen:
      Screen:
        name: "Shopping"


<RadioButtonSelector>:
  size_hint_y: None

<RecipeScreen>:
  name: 'Recipe'
  Accordion:
    orientation: 'horizontal'
    AccordionItem:
      title: 'Filters'
      GridLayout:
        cols: 2
        padding: 30
        spacing: 10
        Label:
          text: "Ease"
          size_hint_y: .2
          width: 100
        Spinner:
          text: "All"
          values: ("All", "Easy", "Medium", "Hard")
          size_hint_y: .2
        Label:
          text: "Type"
          size_hint_y: .2
          width: 100
        Spinner:
          text: "All"
          values: ("Shoku", "Fuku", "Dessert")
          size_hint_y: .2
        RadioButtonSelector:
          text: "Hello"
    AccordionItem:
      title: 'Recipes'
      
